 <div class="main_top_bar">
   <div class="main_top_room_name">
     <%= @room.name %>
   </div>
   <a href="#" class="main_top_end">チャットを終了する</a>
 </div>
    
<div class="chat">
   <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: "main_bottom_bar", local: true do |f| %>
  <div class="main_bottom_form">
    <%= f.text_field :content, class: "main_bottom_text", placeholder: "type a message" %>
    <label class="form-image">
       <span class="image-file">画像</span>
       <%= f.file_field :image, class: 'hidden'%>
    </label>
  </div>
  <%= f.submit '送信', class: "main_bottom_submit"%>
<% end %>
